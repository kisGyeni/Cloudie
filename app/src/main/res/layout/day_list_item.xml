<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/clickView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numOfTheDay"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nameOfTheDay"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameOfTheDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:text="Monday"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutPlaceholder"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numOfTheDay"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dayListBlobDream"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/dayListBlobLove"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/dayListBlobHappy"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/dayListBlobJoke"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/dayListBlobWisdom"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/dayListBlobAngst"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bulb6_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/bulb5_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/bulb4_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/bulb3_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/bulb2_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

            <ImageView
                android:id="@+id/bulb1_ph"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:maxWidth="33dp"
                android:maxHeight="33dp"
                app:srcCompat="@drawable/joke_inactive" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line"/>
</LinearLayout>
